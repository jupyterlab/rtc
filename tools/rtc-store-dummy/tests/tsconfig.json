{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": ["dom", "es5", "es2015.promise", "es2015.iterable"],
  },
  "include": [
    "src/*.ts",
    "../src/**/*.ts"
  ]
}
